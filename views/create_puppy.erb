<form class="needs-validation" method="POST" action="/puppy" novalidate>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="name" placeholder="Name" value="Name" required>
    </div>
  </div>
  <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="age">Age</label>
        <input type="text" name="age" class="form-control" id="age" placeholder="Age" value="Age" required>
      </div>
  </div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="breed">Breed</label>
      <input type="text" name="breed" class="form-control" id="breed" placeholder="Breed" required>
    </div>
  </div>
  <input type="submit" value="submit">
</form>
